{
  "name": "TM Tools",
  "version": "0.0.1",
  "manifest_version": 2,
  "description" : "Some tools to help people who like Terra Mystica enjoy more from the Snellman's platform.",
  "icons": { "16": "icons/16x16.png", "38": "icons/38x38.png", "48": "icons/48x48.png", "128": "icons/128x128.png" },
  
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "TM Tools",
    "default_popup": "browseraction/popup.html"
  },

  "background": {
    "scripts": ["jquery-1.9.1.min.js", "background.js"]
  },
  
  "permissions": [
	 "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-1.9.1.min.js", "content.js", "canvasjs/canvasjs.min.js"]
    }
  ]  
}